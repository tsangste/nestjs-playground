{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":label(dependencies)",
    ":automergeMinor",
    ":automergeRequireAllStatusChecks",
    "group:jsTest",
    "group:linters"
  ],
  "packageRules": [
    {
      "groupName": "nestjs",
      "matchPackagePrefixes": ["@nestjs"],
      "matchUpdateTypes": ["minor", "patch"],
      "minimumReleaseAge": "3 days"
    },
    {
      "groupName": "nestjs",
      "matchPackagePrefixes": ["@nestjs"],
      "matchUpdateTypes": ["major"],
      "labels": ["breaking"]
    },
    {
      "groupName": "mikro-orm",
      "matchPackagePrefixes": ["@mikro-orm"],
      "matchUpdateTypes": ["minor", "patch"],
      "minimumReleaseAge": "3 days"
    },
    {
      "groupName": "mikro-orm",
      "matchPackagePrefixes": ["@mikro-orm"],
      "matchUpdateTypes": ["major"],
      "labels": ["breaking"]
    },
    {
      "matchDepTypes": ["devDependencies"],
      "matchUpdateTypes": [ "minor", "patch"],
      "excludePackagePrefixes": [
        "@nestjs",
        "@mikro-orm",
        "jest",
        "@typescript-eslint",
        "eslint"
      ],
      "excludePackageNames": [
        "@types/jest",
        "@types/supertest",
        "supertest",
        "ts-auto-mock",
        "ts-jest",
        "prettier",
        "@types/eslint"
      ],
      "groupName": "devDependencies",
      "minimumReleaseAge": "3 days"
    },
    {
      "matchDepTypes": ["devDependencies"],
      "excludePackagePrefixes": [
        "@nestjs",
        "@mikro-orm",
        "jest",
        "@typescript-eslint",
        "eslint"
      ],
      "excludePackageNames": [
        "@types/jest",
        "@types/supertest",
        "supertest",
        "ts-auto-mock",
        "ts-jest",
        "prettier",
        "@types/eslint"
      ],
      "matchUpdateTypes": ["major"],
      "groupName": "devDependencies",
      "labels": ["breaking"]
    },
    {
      "matchPackagePatterns": ["*"],
      "matchDepTypes": ["dependencies"],
      "excludePackagePrefixes": [
        "@nestjs",
        "@mikro-orm"
      ],
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "all non-major dependencies",
      "groupSlug": "all-minor-patch-dependencies",
      "labels": ["dependencies"],
      "minimumReleaseAge": "3 days"
    },
    {
      "matchPackagePatterns": ["*"],
      "matchDepTypes": ["dependencies"],
      "groupName": "all major dependencies",
      "groupSlug": "all-major-dependencies",
      "matchUpdateTypes": ["major"],
      "excludePackagePrefixes": [
        "@nestjs",
        "@mikro-orm"
      ],
      "labels": ["dependencies", "breaking"]
    },
    {
      "matchManagers": ["github-actions"],
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "all non-major actions",
      "groupSlug": "all-minor-patch-actions",
      "labels": ["actions"],
      "minimumReleaseAge": "3 days"
    },
    {
      "matchManagers": ["github-actions"],
      "matchUpdateTypes": ["major"],
      "groupName": "all major actions",
      "groupSlug": "all-major-actions",
      "labels": ["actions", "breaking"]
    }
  ]
}
