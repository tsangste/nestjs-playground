{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":label(dependencies)",
    "group:jsTest",
    "group:linters"
  ],
  "packageRules": [
    {
      "groupName": "nestjs",
      "matchPackagePrefixes": ["@nestjs"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    },
    {
      "groupName": "nestjs",
      "matchPackagePrefixes": ["@nestjs"],
      "matchUpdateTypes": ["major"],
      "labels": ["breaking"]
    },
    {
      "groupName": "mikro-orm",
      "matchPackagePrefixes": ["@mikro-orm"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    },
    {
      "groupName": "mikro-orm",
      "matchPackagePrefixes": ["@mikro-orm"],
      "matchUpdateTypes": ["major"],
      "labels": ["breaking"]
    },
    {
      "matchDepTypes": ["devDependencies"],
      "matchUpdateTypes": [ "minor", "patch"],
      "excludePackagePrefixes": [
        "@nestjs",
        "@mikro-orm",
        "@testing-library",
        "@vitest",
        "chai",
        "jest",
        "mocha",
        "qunit",
        "should",
        "sinon"
      ],
      "excludePackageNames": [
        "@types/chai",
        "@types/ember-mocha",
        "@types/ember-qunit",
        "@types/enzyme",
        "@types/istanbul",
        "@types/jest",
        "@types/mocha",
        "@types/mock-fs",
        "@types/proxyquire",
        "@types/sinon",
        "@types/supertest",
        "coveralls",
        "ember-exam",
        "ember-mocha",
        "ember-qunit",
        "enzyme",
        "istanbul",
        "mock-fs",
        "nock",
        "nyc",
        "proxyquire",
        "supertest",
        "ts-auto-mock",
        "ts-jest",
        "vitest",
        "prettier"
      ],
      "groupName": "devDependencies",
      "automerge": true
    },
    {
      "matchDepTypes": ["devDependencies"],
      "excludePackagePrefixes": [
        "@nestjs",
        "@mikro-orm",
        "@testing-library",
        "@vitest",
        "chai",
        "jest",
        "mocha",
        "qunit",
        "should",
        "sinon",
        "@typescript-eslint/",
        "eslint"
      ],
      "excludePackageNames": [
        "@types/chai",
        "@types/ember-mocha",
        "@types/ember-qunit",
        "@types/enzyme",
        "@types/istanbul",
        "@types/jest",
        "@types/mocha",
        "@types/mock-fs",
        "@types/proxyquire",
        "@types/sinon",
        "@types/supertest",
        "coveralls",
        "ember-exam",
        "ember-mocha",
        "ember-qunit",
        "enzyme",
        "istanbul",
        "mock-fs",
        "nock",
        "nyc",
        "proxyquire",
        "supertest",
        "ts-auto-mock",
        "ts-jest",
        "vitest",
        "prettier",
        "@types/eslint"
      ],
      "matchUpdateTypes": ["major"],
      "groupName": "devDependencies",
      "labels": ["breaking"]
    },
    {
      "matchPackagePatterns": ["*"],
      "matchDepTypes": ["dependencies"],
      "excludePackagePrefixes": [
        "@nestjs",
        "@mikro-orm"
      ],
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "all non-major dependencies",
      "groupSlug": "all-minor-patch",
      "automerge": true,
      "labels": ["dependencies"]
    },
    {
      "matchPackagePatterns": ["*"],
      "matchDepTypes": ["dependencies"],
      "excludePackagePrefixes": [
        "@nestjs",
        "@mikro-orm"
      ],
      "matchUpdateTypes": ["major"],
      "labels": ["dependencies", "breaking"]
    }
  ]
}
