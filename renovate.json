{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":label(dependencies)",
    "group:jsTest",
    "group:linters"
  ],
  "packageRules": [
    {
      "groupName": "nestjs",
      "matchPackagePrefixes": ["@nestjs"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    },
    {
      "groupName": "nestjs",
      "matchPackagePrefixes": ["@nestjs"],
      "matchUpdateTypes": ["major"],
      "labels": ["breaking"]
    },
    {
      "groupName": "mikro-orm",
      "matchPackagePrefixes": ["@mikro-orm"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    },
    {
      "groupName": "mikro-orm",
      "matchPackagePrefixes": ["@mikro-orm"],
      "matchUpdateTypes": ["major"],
      "labels": ["breaking"]
    },
    {
      "matchDepTypes": ["devDependencies"],
      "matchUpdateTypes": [ "minor", "patch"],
      "excludePackagePrefixes": [
        "@nestjs",
        "@mikro-orm"
      ],
      "excludePackagePatterns": [
        "^eslint",
        "^jest"
      ],
      "groupName": "devDependencies",
      "automerge": true
    },
    {
      "matchDepTypes": ["devDependencies"],
      "excludePackagePrefixes": [
        "@nestjs",
        "@mikro-orm"
      ],
      "excludePackagePatterns": [
        "^eslint",
        "^jest"
      ],
      "matchUpdateTypes": ["major"],
      "groupName": "devDependencies",
      "labels": ["breaking"]
    },
    {
      "matchPackagePatterns": ["*"],
      "matchDepTypes": ["dependencies"],
      "excludePackagePrefixes": [
        "@nestjs",
        "@mikro-orm"
      ],
      "excludePackagePatterns": [
        "^eslint",
        "^jest"
      ],
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "all non-major dependencies",
      "groupSlug": "all-minor-patch",
      "automerge": true,
      "labels": ["dependencies"]
    },
    {
      "matchPackagePatterns": ["*"],
      "matchDepTypes": ["dependencies"],
      "excludePackagePrefixes": [
        "@nestjs",
        "@mikro-orm"
      ],
      "excludePackagePatterns": [
        "^eslint",
        "^jest"
      ],
      "matchUpdateTypes": ["major"],
      "labels": ["dependencies", "breaking"]
    }
  ]
}
