{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":label(dependencies)",
    "group:jsTest",
    "group:linters"
  ],
  "packageRules": [
    {
      "groupName": "nestjs",
      "matchPackagePrefixes": ["@nestjs"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    },
    {
      "groupName": "nestjs",
      "matchPackagePrefixes": ["@nestjs"],
      "matchUpdateTypes": ["major"],
      "labels": ["breaking"]
    },
    {
      "groupName": "mikro-orm",
      "matchPackagePrefixes": ["@mikro-orm"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    },
    {
      "groupName": "mikro-orm",
      "matchPackagePrefixes": ["@mikro-orm"],
      "matchUpdateTypes": ["major"],
      "labels": ["breaking"]
    }
  ]
}
